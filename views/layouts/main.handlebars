<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe Master</title>
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="flex-column justify-space-around">
      <header class="display-flex justify-space-between align-center p-2">
        <a href="/"><img src="/images/logo.jpeg" alt="Recipe Master logo" /></a>
        <a href="/"><h1>
            Recipe Master
          </h1></a>
        <nav>
          <a href="/">HOME</a>
          <!-- Render login or logout links -->
          {{#if logged_in}}
            <a href="/profile">PROFILE</a>
            <button id="logout">LOGOUT</button>
          {{else}}
            <a href="login">LOGIN</a>
          {{/if}}
        </nav>
      </header>
      <main class="container container-fluid mt-5">
        <div class="container-center">
          <!-- Render body -->
          {{{body}}}
        </div>
      </main>
      <footer>

        <a href="https://github.com/kuocats/Recipe_Masters">
          Recipe masters GitHub link</a>
      </footer>
    </div>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>