<div class="row">
  <div class="col-auto">
    <h2>Hello, {{name}}!</h2>
  </div>
</div>
<div class="row mt-4">
  <div class="col-md-12">

    <h1>Create Recipe</h1>
    <form
      id="create-recipe-form"
      class="form"
      action="/api/Recipes"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <label for="recipe_name">Recipe Name:</label>
        <input
          class="form-input"
          type="text"
          id="recipe_name"
          name="recipe_name"
          required
        />
      </div>
      <div>
        <label for="cook_time">Cook Time (minutes):</label>
        <input type="number" id="cook_time" name="cook_time" required />
      </div>
      <div>
        <label for="category">Category:</label>
        <select id="category" name="category" required>
          <option value="" disabled selected>Select a category</option>
          <!-- Categories will be populated dynamically using JavaScript -->
        </select>
      </div>
      <div>
        <label for="recipe_text">Recipe Instructions:</label>
        <textarea
          id="recipe_text"
          name="recipe_text"
          rows="4"
          required
        ></textarea>
      </div>
    <div>
  <label for="ingredients">Ingredients:</label>
  <div id="ingredients-container">
    <div class="ingredient-row">
      <input type="text" name="ingredients[]" required />
      <button type="button" class="remove-ingredient-btn">Remove</button>
    </div>
  </div>
  <button type="button" id="add-ingredient-btn">Add Ingredient</button>
</div>
     <div>
        <label for="recipe_image">Recipe Image:</label>
        <input type="file" id="recipe_image" name="recipe_image" accept="image/*" required/>
      </div>
      <input type="submit" value="Create Recipe" />
    </form>

  {{#if recipes.length}}
    <div class="col-md-6 recipe-list">
      <h3>Current Recipes:</h3>

      {{#each recipes as |recipe|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger delete-recipe"
              data-id="{{recipe.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>